@using TravelBlog.Models
@model TravelBlog.Models.Person

@{
    ViewData["Title"] = "Travel Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Create</h2>
<hr />
<div class="list-card"></div>
<h3>Add a new Person you've met</h3>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.PersonName)
    @Html.TextBoxFor(model => model.PersonName)

    @Html.LabelFor(model => model.PersonDescription)
    @Html.TextBoxFor(model => model.PersonDescription)

    @Html.LabelFor(model => model.PersonImage)
    @Html.EditorFor(model => model.PersonImage)

    @if(ViewBag.Experience.Count() != 0)
    {
        <label for="Experience">Experience</label>
        @Html.DropDownList("Experience")
    }
    <input type="submit" value="Add new person" />
}
<p>@Html.ActionLink("Back to list", "Index")</p>

