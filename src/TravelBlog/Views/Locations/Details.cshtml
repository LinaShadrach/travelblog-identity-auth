@model TravelBlog.Models.Location
@using TravelBlog.Models

@{
    ViewData["Title"] = "Travel Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Location details</h2>
<hr />
<div class="list-card">
<img src="@Html.DisplayFor(model => model.LocationImage)" /><br />


@Html.DisplayFor(model => model.LocationName)<br />
@Html.DisplayFor(model => model.LocationDescription)

    <h4>Experiences:</h4>
    @foreach(var experience in Model.Experiences)
    {
        @experience.ExperienceName<br />
    }
    @if (Model.Comments.Count > 0)
    {
        <h4>Comments:</h4>
        <div id="commentList">
            @foreach(var comment in Model.Comments)
            {

                <p>@comment.Body by @comment.User.UserName</p>
            }
        </div>
    }
<form id="addComment" action="Comments/Create">
    <input type="hidden" value="@Model.LocationId" id="locationId"/>
    <button type="submit">Add comment</button>
</form>
<div id="commentForm">
</div>


<p>@Html.ActionLink("Back to list", "Index")</p>

</div>